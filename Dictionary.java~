  //checks to see which words are the right length 
  public void rightLengthArray()
  {  
    for (int i = wordBank.size(); i > 0 ; i--)
    {
      if (wordBank.get(i-1).length() != wordLength)
      {
        wordBank.remove(i-1);
      }
    }
  }
  
